{
  "name": "@sjanota/ts-adt",
  "version": "1.0.4",
  "description": "ADT generator for TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "copy-dist": "cp -r ./dist/* . && rm -rf ./dist",
    "prepublish": "yarn build && yarn copy-dist",
    "cleanup-dist-postpublish": "git clean -fd",
    "create-release-tag": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "postpublish": "yarn cleanup-dist-postpublish && yarn create-release-tag"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sjanota/ts-adt.git"
  },
  "keywords": [
    "typescript",
    "functional-programming",
    "adt"
  ],
  "author": "sjanota",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/sjanota/ts-adt/issues"
  },
  "homepage": "https://github.com/sjanota/ts-adt#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "files": [
    "index.js",
    "index.d.js",
    "LICENSE",
    "README.md"
  ]
}
